<ivysettings>

  <settings defaultResolver="default"/>

  <credentials host="ossrh-staging-api.central.sonatype.com" realm="Sonatype Nexus Repository Manager" username="${sonatype.user}" passwd="${sonatype.password}"/>

  <include url="${ivy.default.settings.dir}/ivysettings-public.xml"/>

  <signers>
    <pgp name="gpg" keyId="${gpg.keyId}" password="${gpg.password}" secring="${gpg.secring}"/>
  </signers>

  <resolvers>

    <ibiblio name="nexus-central" root="https://ossrh-staging-api.central.sonatype.com/service/local/staging/deploy/maven2/" m2compatible="true" signer="gpg"/>

    <ibiblio name="nexus-snapshot" root="https://ossrh-staging-api.central.sonatype.com/content/repositories/snapshots/" m2compatible="true"/>

    <filesystem name="local-m2-publish" m2compatible="true">
      <artifact pattern="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
    </filesystem>

    <filesystem name="user-dir-m2-publish" m2compatible="true">
      <artifact pattern="${user.dir}/dist/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
    </filesystem>

    <chain name="default">
      <resolver ref="public"/>
    </chain>

  </resolvers>
</ivysettings>